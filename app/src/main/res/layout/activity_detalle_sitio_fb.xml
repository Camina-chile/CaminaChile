<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo03"
    tools:context=".Detalle_sitio_fb">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/form_summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="DuplicateIds">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Región:"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />
        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Región"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/prov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Provincia:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#ffff"
            tools:layout_constraintTop_creator="1" />
        <TextView
            android:id="@+id/provincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Provincia"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/comuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Ciudad:"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />
        <TextView
            android:id="@+id/ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Ciudad"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#ffff"
            tools:layout_constraintTop_creator="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Lugar:"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />
        <TextView
            android:id="@+id/lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Lugar"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Descripción:"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />
        <TextView
            android:id="@+id/comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Comentario"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1" />

        </LinearLayout>


        <VideoView
            android:id="@+id/videofb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tooltipText="video"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp"/>



        <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7dp">

    </LinearLayout>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp">

        </LinearLayout>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp">

        </LinearLayout>

        <ListView android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/lisView"
            android:visibility="gone"
            />

        <ru.dimorinny.floatingtextbutton.FloatingTextButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            app:backgroundTint="@color/colorPrimary"
            app:floating_background_color="@color/colorPrimary"
            app:floating_left_icon="@android:drawable/ic_media_previous"
            app:floating_title="Volver"
            app:floating_title_color="@android:color/white"/>
    </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout >