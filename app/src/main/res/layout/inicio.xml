<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo03"
    tools:context="com.exj.jc.caminachile.Inicio">


    <ScrollView


        android:layout_width="407dp"
        android:layout_height="729dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout

            android:layout_width="400dp"
            android:layout_height="800dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="339dp"
                android:layout_height="280dp"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:src="@drawable/icono_camina"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Suspicious0dp"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="CAMINA CHILE"
                android:textColor="#0174DF"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone"
                android:gravity="center_horizontal" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dip">

            <EditText
                android:id="@+id/correo"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                app:backgroundTint="@color/colorAccent"
                android:singleLine="true"
                android:ems="10"
                android:textStyle="italic"
                android:hint="Mail..."/>

        </LinearLayout>


        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dip">

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:ems="10"
                android:hint="Contraseña... (*)"
                app:backgroundTint="@color/colorAccent"
                android:textColorHint="#fff"
                android:textStyle="italic"
                android:inputType="textPassword" />

        </LinearLayout>

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dip">

                <Switch
                    android:id="@+id/switchRemember"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="Recordar"
                    android:textColor="#ffff"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:weightSum="2">
                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:weightSum="2">


                <Button
                    android:id="@+id/btnInicio"
                    android:layout_width="337dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/animation_list_btn_1"
                    android:minWidth="100dp"
                    android:singleLine="true"
                    android:text="Acceder"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewReg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="No tienes cuenta, Registrate aquí"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="italic"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/textViewFgpass"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Olvidó su clave?. Restablecer."
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="italic"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
